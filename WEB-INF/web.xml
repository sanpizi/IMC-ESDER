<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>BootstrapServlet</servlet-name>
        <servlet-class>com.zyt.ws.BootstrapServlet</servlet-class>
        <init-param>
            <param-name>dbHost</param-name>
            <param-value>localhost</param-value>
        </init-param>
        <init-param>
            <param-name>dbPort</param-name>
            <param-value>1433</param-value>
        </init-param>
        <init-param>
            <param-name>dbName</param-name>
            <param-value>sdimc</param-value>
        </init-param>
        <init-param>
            <param-name>userName</param-name>
            <param-value>sa</param-value>
        </init-param>
        <init-param>
            <param-name>password</param-name>
            <param-value>000000</param-value>
        </init-param>
        <init-param>
            <param-name>connPoolCount</param-name>
            <param-value>5</param-value>
        </init-param>
        <init-param>
            <param-name>siteOnlineInternalInMinutes</param-name> <!-- in minutes -->
            <param-value>15</param-value>
        </init-param>
        <init-param>
            <!-- snmpVer: 0 ~ snmp version1, 1 ~ snmp version2c, 3 ~ snmp version3 -->
            <param-name>snmpVer</param-name>
            <param-value>1</param-value>
        </init-param>
        <init-param>
            <param-name>snmpCommunity</param-name>
            <param-value>public</param-value>
        </init-param>
        <init-param>
            <param-name>snmpTransport</param-name>
            <param-value>udp</param-value>
        </init-param>
        <init-param>
            <param-name>snmpHost</param-name>
            <param-value>127.0.0.1</param-value>
        </init-param>
        <init-param>
            <param-name>snmpPort</param-name>
            <param-value>162</param-value>
        </init-param>
        <init-param>
            <param-name>snmpTimeout</param-name>
            <param-value>3000</param-value> <!-- in MS -->
        </init-param>
        <init-param>
            <param-name>snmpRetries</param-name>
            <param-value>1</param-value>
        </init-param>
        <init-param>
            <param-name>statsFilesFolder</param-name>
            <param-value>statsFiles</param-value>
        </init-param>
        <init-param>
            <param-name>dailyStatsFilesCount</param-name>
            <param-value>30</param-value>
        </init-param>
        <init-param>
            <param-name>monthlyStatsFilesCount</param-name>
            <param-value>12</param-value>
        </init-param>
        <init-param>
            <param-name>oracleIp</param-name>
            <param-value>10.1.32.21</param-value>
        </init-param>
        <init-param>
            <param-name>oraclePort</param-name>
            <param-value>1521</param-value>
        </init-param>
        <init-param>
            <param-name>oracleDbName</param-name>
            <param-value>DBSTORE</param-value>
        </init-param>
        <init-param>
            <param-name>oracleUserName</param-name>
            <param-value>HDBCOOLER</param-value>
        </init-param>
        <init-param>
            <param-name>oraclePassword</param-name>
            <param-value>DBCOOLER240</param-value>
        </init-param>
        <init-param>
            <param-name>requiredSignalsForSiteDetails</param-name>
            <param-value>957,958,959,960,961,962,977,980,983,985,986,987,989,990,991,992,1006,1008,1011,1014,1015</param-value>
        </init-param>
        <init-param>
            <param-name>requiredSignalsForHisData</param-name>
            <param-value>957,958,959,969,978,981,984,985,986</param-value>
        </init-param>
        <init-param>
            <param-name>requiredTypeIdsForAlarm</param-name>
            <param-value>0,6,8,11,14,15,19,20,21,22</param-value>
        </init-param>
        <load-on-startup>10</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>BootstrapServlet</servlet-name>
        <url-pattern>/only/for/bootstrap/not/for/external/usage</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>GlobalStatsServlet</servlet-name>
        <servlet-class>com.zyt.ws.GlobalStatsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GlobalStatsServlet</servlet-name>
        <url-pattern>/globalStats</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>AreasServlet</servlet-name>
        <servlet-class>com.zyt.ws.AreasServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AreasServlet</servlet-name>
        <url-pattern>/areas</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SitesServlet</servlet-name>
        <servlet-class>com.zyt.ws.SitesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SitesServlet</servlet-name>
        <url-pattern>/sites</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SiteDetailServlet</servlet-name>
        <servlet-class>com.zyt.ws.SiteDetailServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SiteDetailServlet</servlet-name>
        <url-pattern>/site/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DailyAlarmStatsServlet</servlet-name>
        <servlet-class>com.zyt.ws.DailyAlarmStatsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DailyAlarmStatsServlet</servlet-name>
        <url-pattern>/alarmsStat</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.zyt.ws.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.zyt.ws.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ModifyAccountServlet</servlet-name>
        <servlet-class>com.zyt.ws.ModifyAccountServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ModifyAccountServlet</servlet-name>
        <url-pattern>/modifyAccount</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>RealAlarmsServlet</servlet-name>
        <servlet-class>com.zyt.ws.RealAlarmsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RealAlarmsServlet</servlet-name>
        <url-pattern>/alarms</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>HisAlarmsServlet</servlet-name>
        <servlet-class>com.zyt.ws.HisAlarmsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HisAlarmsServlet</servlet-name>
        <url-pattern>/hisalarms</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ConfigServlet</servlet-name>
        <servlet-class>com.zyt.ws.ConfigServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ConfigServlet</servlet-name>
        <url-pattern>/config</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ExportHisAlarms</servlet-name>
        <servlet-class>com.zyt.ws.ExportHisAlarmsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ExportHisAlarms</servlet-name>
        <url-pattern>/exportHisAlarms</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>HisDatasServlet</servlet-name>
        <servlet-class>com.zyt.ws.HisDatasServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HisDatasServlet</servlet-name>
        <url-pattern>/hisdatas</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>StatsFileListServlet</servlet-name>
        <servlet-class>com.zyt.ws.StatsFileListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StatsFileListServlet</servlet-name>
        <url-pattern>/statsFileList</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>StatsFileServlet</servlet-name>
        <servlet-class>com.zyt.ws.StatsFileServlet</servlet-class> <!-- revise on 2015.10.16 -->
    </servlet>
    <servlet-mapping>
        <servlet-name>StatsFileServlet</servlet-name>
        <url-pattern>/statsFile</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>com.zyt.ws.AuthenticationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <servlet-name>AreasServlet</servlet-name>
        <servlet-name>DailyAlarmStatsServlet</servlet-name>
        <servlet-name>GlobalStatsServlet</servlet-name>
        <servlet-name>ModifyAccountServlet</servlet-name>
        <servlet-name>SiteDetailServlet</servlet-name>
        <servlet-name>SitesServlet</servlet-name>
        <servlet-name>RealAlarmsServlet</servlet-name>
        <servlet-name>HisAlarmsServlet</servlet-name>
        <servlet-name>ConfigServlet</servlet-name>
        <servlet-name>ExportHisAlarms</servlet-name>
        <servlet-name>HisDatasServlet</servlet-name>
        <servlet-name>StatsFileListServlet</servlet-name>
        <servlet-name>StatsFileServlet</servlet-name>
    </filter-mapping>
</web-app>